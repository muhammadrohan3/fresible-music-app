<section class="-u-page subscription">
  <% const {id, release, tracks, createdAt, name, artwork } = pageData %>
  <div class="single-head">
    <a
      class="single-head__back"
      href="<%= Fns.url(`/submission?id=${Fns.idLookUp(release.id)}`) %>"
    >
      <span
        class="iconify"
        data-icon="ion:arrow-back-circle-outline"
        data-inline="false"
      ></span>
      <span>Back</span>
    </a>
    <div class="single-head__title -u-id-head">
      <span>Album</span><span>&mdash;</span><span><%= Fns.idLookUp(id) %></span>
    </div>
  </div>
  <section class="subscription__info">
    <div class="overview__cat">
      <div class="overview__cat--name">
        <span
          class="iconify overview__cat--name-icon"
          data-icon="ion:folder-open-outline"
          data-inline="false"
        ></span>
        ALBUM INFO.
      </div>
      <ul class="overview__cat__list">
        <li class="overview__cat__list__item">
          <div class="u-flex-middle">
            <span
              class="iconify overview__cat__list__item--icon"
              data-icon="ei:check"
              data-inline="false"
            ></span>
            <span>Title:</span>
          </div>
          <span><%=name %></span>
        </li>
        <li class="overview__cat__list__item">
          <div class="u-flex-middle">
            <span
              class="iconify overview__cat__list__item--icon"
              data-icon="ei:check"
              data-inline="false"
            ></span>
            <span>Status:</span>
          </div>
          <div>
            <span
              class="badge badge-pill badge-<%=Fns.colorText(release.status) %>"
            >
              <%=release.status %>
            </span>
          </div>
        </li>
        <li class="overview__cat__list__item">
          <div class="u-flex-middle">
            <span
              class="iconify overview__cat__list__item--icon"
              data-icon="ei:check"
              data-inline="false"
            ></span>
            <span>Artwork:</span>
          </div>
          <div class="d-inline-block">
            <span class="mr-1"><%= artwork ? 'uploaded' : '' %></span> <%
            if(Fns.isAdminPage) { %>
            <a target="_blank" href="<%= artwork %>"
              ><span
                class="iconify"
                data-icon="feather:eye"
                data-inline="false"
              ></span
            ></a>
            <% } %>
          </div>
        </li>
        <li class="overview__cat__list__item">
          <div class="u-flex-middle">
            <span
              class="iconify overview__cat__list__item--icon"
              data-icon="ei:check"
              data-inline="false"
            ></span>
            <span>Tracks:</span>
          </div>
          <span><%=tracks.length %></span>
        </li>
        <li class="overview__cat__list__item">
          <div class="u-flex-middle">
            <span
              class="iconify overview__cat__list__item--icon"
              data-icon="ei:check"
              data-inline="false"
            ></span>
            <span>Date Added:</span>
          </div>
          <span><%=Fns.dateFormat(createdAt) %></span>
        </li>
      </ul>
    </div>
  </section>
  <div class="subscription__table">
    <div class="subscription__table--head">
      Album (<%= Fns.idLookUp(id) %>) - tracks
    </div>
    <%- include('../partials/albumTracks', {pageData: tracks, albumId: id}) %>
  </div>
</section>
