
<div class="select-package -u-mobile-default" id="selectPackage">
  <% const packages = {} %> 
  <% pageData.forEach(({package, ...others}) => {
    let T;
    //IF THERE ARE MORE THAN 1 PACKAGE, THE ACTIVE ON WILL BE FAVOURED
    let packageName = package.toLowerCase().replace(/ /g, "");
    if(T = packages[packageName]) packages[packageName] = T.status === 'inactive' ? others : T;
    else packages[packageName] = others;
  }) %>
  <% const {single, album, basic, professional, worldclass, legendary} = packages; %> 
  <div class="select-package__packages -u-grid-mobile">
    <% if(single.status === 'active') { %>
      <div class="package">
        <div class="package__head">
          <span class="package__head--type">Single</span> -
          <span class="package__head--price"><%= Fns.formatCurrency(single["price"]) %></span>
          <span class="package__head--info">artist / year</span>
        </div>
        <ul class="package__list">
          <li class="package__list--item">
            <span class="iconify" data-icon="ei:check" data-inline="false"></span>
            <span
              >Quickly Distribute your Single Track on 60+ Music Streaming Platform like
              Spotify, Apple Music, Boomplay Music, iTunes, Deezer, Amazon Music,
              etc.</span
            >
          </li>
        </ul>
        <button data-account_type="<%= loggedInAccountType %>" data-package="<%= single["id"] %>" class="package__btn btn-primary">
          GET STARTED
        </button>
      </div>
   <% } %>
   <% if(album.status === 'active') { %>
