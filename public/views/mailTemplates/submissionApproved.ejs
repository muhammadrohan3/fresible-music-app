<%- include partials/header %>
<body>
  <div class="mail">
    <div class="action">
      <div class="action__head">
        <h1 class="action__head--text">RELEASE APPROVED</h1>
      </div>
      <div class="action__body">
        <div class="">
          <p>Hi <b><%= firstName %>,</b></p>
        </div>
        <div>
          <p>
            This is to notify you that one of your releases has just been
            approved.
          </p>
        </div>
        <div>
          <p>
            Publishing to online stores process has been initiated based on the
            release date.
          </p>
        </div>
        <div>
          <p>
            You can track the process on your dashboard.
          </p>
        </div>
        <div>
          <p>
            Thanks for being all in.
          </p>
        </div>
        <button class="mail-btn">
          <a href="<%= url %>">VIEW RELEASE</a>
        </button>
      </div>
    </div>
    <%- include partials/footer.ejs %>
  </div>
</body>
