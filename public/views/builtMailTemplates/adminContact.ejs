<%- include partials/header %>
<body style="background-color: #e8eff9; box-sizing: border-box; font-family: 'Open Sans', sans-serif; margin: 0; padding: 30px 0;">
  <div class="mail" style="background-color: #fff; box-sizing: border-box; color: #333; font-size: 16px; margin: 0 auto; max-width: 600px; padding: 25px 15px;">
    <div class="action" style="box-sizing: border-box; margin: 0; padding: 0; width: 100%;">
      <div class="action__head" style="background-image: linear-gradient(to right, #c54f40, #170ba7); box-sizing: border-box; margin: 0 0 35px; padding: 15px 0; text-align: center;">
        <h1 class="action__head--text" style="box-sizing: border-box; color: #fff; font-family: 'Poppins', sans-serif; font-weight: 100; margin: 0; padding: 0;">NEW CONTACT</h1>
      </div>
      <div class="action__body" style="box-sizing: border-box; margin: 0; padding: 0 15px; text-align: center;">
        <div style="box-sizing: border-box; margin: 0; margin-bottom: 15px; padding: 0;"><p style="box-sizing: border-box; margin: 0; padding: 0;">Hi</p></div>
        <div style="box-sizing: border-box; margin: 0; margin-bottom: 15px; padding: 0;">
          <p style="box-sizing: border-box; margin: 0; padding: 0;">A user just submitted a contact form on the music portal...</p>
        </div>
        <div style="border: 1px solid grey; box-sizing: border-box; margin: 0; padding: 10px;">
          <div style="box-sizing: border-box; margin: 0; padding: 0;"><b style="box-sizing: border-box; margin: 0; padding: 0;">Email:</b> <span style="box-sizing: border-box; margin: 0; padding: 0;"><%=email %></span></div>
          <div style="box-sizing: border-box; margin: 0; padding: 0;"><b style="box-sizing: border-box; margin: 0; padding: 0;">Subject:</b> <span style="box-sizing: border-box; margin: 0; padding: 0;"><%=subject %></span></div>
          <div style="box-sizing: border-box; margin: 0; padding: 0;">
            <b style="box-sizing: border-box; margin: 0; padding: 0;">Content:</b>
            <span style="box-sizing: border-box; margin: 0; padding: 0;"><%=content %></span>
          </div>
        </div>
      </div>
    </div>
    <%- include partials/footer.ejs %>
  </div>
</body>
