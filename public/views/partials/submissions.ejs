<div class="submissions">
  <% const { count, rows } = pageData %>
  <table class="table table-hover text-center submissions__table">
    <thead class="submissions__table--head">
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Status</th>
        <th>Type</th>
        <th>Date Added</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% (rows || pageData || []).forEach((row) => { %>
      <!--  -->
      <% const {id, title, type, status, createdAt} = row %>
      <tr>
        <td>
          <a href="/submission/<%= Fns.idLookUp(id) %>"
            ><%= Fns.idLookUp(id) %></a
          >
        </td>
        <td><%= title %></td>
        <td>
          <span class="badge badge-pill badge-<%= Fns.colorText(status) %>"
            ><%= status %></span
          >
        </td>
        <td><%=type %></td>
        <td><%= Fns.dateFormat(createdAt) %></td>
        <td>
          <a href="/submission/<%= Fns.idLookUp(id) %>">edit</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
