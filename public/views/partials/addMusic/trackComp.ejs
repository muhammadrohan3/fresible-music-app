<div>
  <% const token = Fns.token(10); %>
  <form
    class="music-form track-form -u-form-small_label"
    data-mixed="true"
    data-submiturl="/add-music/track"
    data-type="submit-info"
    data-submitnum="<%= 'submitStatus+1' %>"
  >
    <div class="track-form__head">
      <!-- AUDIO UPLOAD -->
      <%- include("../form/audioFile", {formData: {required: '*required',
      classList: ['track-form__head--1'], name: 'track', value:
      '/audio/eben.mp3', public_id: `music/musics/music-${'token'}`, size: '50',
      uploadTexts: [`Upload Track (.wav, .mp3)`, `file size no larger than
      50MB`]}}) %>

      <!-- ARTWORK UPLOAD -->
      <%- include("../form/imageFile", {formData: {required: '*required',
      classList: ['track-form__head--2'], name: 'artwork', value:
      '/images/burna.jpg', public_id: `music/artworks/artwork-${'token'}`, size:
      '2', uploadTexts: [`File format must be .jpg/.jpeg`, `File size must not
      be larger than 1.5mb`, `Image dimensions should be at least 3000 x 3000
      pixels`, `Design must not contain website addresses, email addresses,
      logos, social media icons, or any other reference to other services (ie.
      social media)`]}}) %>
    </div>

    <div class="track-form__body">
      <div class="track-form__body__1">
        <!-- TRACK TITLE -->
        <%- include("../form/input", {formData: {required: '*', name: 'title',
        label: 'Track Title', value: 'Dance'}}) %>

        <!-- ARTISTE -->
        <%- include("../form/input", {formData: {required: '*', name: 'artiste',
        label: 'Artiste', disabled: true, value: 'John', dontIgnore: true}}) %>
      </div>

      <div class="music-form__body__2 align-items-baseline">
        <!-- EXPLICIT -->
        <%- include("../form/select", {formData: {required: '*',
        classList:['music-form__body__2--1'], name: 'explicit', label: `Explicit
        Content`, options: [['yes', 'Yes'], ['no', 'No']]}}) %>

        <!--  FEATURED -->
        <%- include("../form/input", {formData: {name: 'featured',label:
        `Featured Artist(s)`, placeholder:'each should be separated by a comma',
        classList:['music-form__body__2--2']}}) %>
      </div>
      <div class="music-form__body__3">
        <div class="music-form__body__3--1">
          <!--  COPYRIGHT YEAR -->
          <%- include("../form/input", {formData: {name: 'copyright', type:
          'number', required: '*', label: `Copyright Year`}}) %>

          <!--  COPYRIGHT HOLDER -->
          <%- include("../form/input", {formData: {name: 'copyrightHolder',
          required: '*', label: `Copyright Holder`}}) %>
        </div>
        <% const genres = JSON.parse(Fns.genres); %>
        <!-- GENRES -->
        <%- include("../form/select", {formData: {required: '*',
        classList:['music-form__body__3--2'], name: 'genre', label: 'Genre',
        options: genres}}) %>
      </div>
    </div>
  </form>
</div>
